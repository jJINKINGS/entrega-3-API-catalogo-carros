generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id          String  @db.VarChar(36) @id @default(uuid())
  name        String  @db.VarChar(100)
  description String? @db.Text
  brand       String  @db.VarChar(100)
  year        Int
  km          Int 
}

